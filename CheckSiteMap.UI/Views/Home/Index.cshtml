@model CheckSiteMap.UI.Models.SiteViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section AddToHead{
    @Styles.Render("~/Content/MainPageStyle.css")
}

<div class="container">
    <div class="row">
        <div class="col-sm-8">
            <div id="carouselExampleInterval" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active" data-interval="10000">
                        <img src="~/Content/images/Pic1.jpg" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item" data-interval="2000">
                        <img src="~/Content/images/Pic2.jpg" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Content/images/table.jpg" class="d-block w-100" alt="...">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleInterval" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleInterval" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-4">
        <div id="card1" class="card" style="width: 18rem;">
            <img src="~/Content/images/1.png" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">Flexibility</h5>
                <p class="card-text">Rate lexibility of your site right now</p>
            </div>
        </div>
    </div>
    <div class="col-sm-4">
        <div id="card2" class="card" style="width: 18rem;">
            <img src="~/Content/images/2.png" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">Speed response</h5>
                <p class="card-text">Check speed of responce from your sitemap to user</p>
            </div>
        </div>
    </div>
    <div class="col-sm-4">
        <div id="card3" class="card" style="width: 18rem;">
            <img src="~/Content/images/3.png" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">Econom trafic</h5>
                <p class="card-text">Reduce cost of in and out trafic on your server</p>
            </div>
        </div>
    </div>
</div>
