@model CheckSiteMap.UI.Models.SiteViewModel

@using PagedList;
@using PagedList.Mvc;

@{
    ViewBag.Title = "User Results";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All my requests</h2>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Url</th>
            <th scope="col">User Ip</th>
            <th scope="col">Summary Time, sec</th>
            <th scope="col">Date</th>
            <th scope="col">Check</th>
            <td scope="col">Delete</td>
        </tr>
    </thead>
    @using (Html.BeginForm("DeleteRequest", "Home", FormMethod.Post))
    {
        foreach (var site in ViewBag.PaggedList)
        {
            <tbody>
                <tr>
                    <td>@string.Join(" ", site.Url)</td>
                    <td>@string.Join(" ", site.RequestIp)</td>
                    <td>@string.Join(" ", site.SummaryTime)</td>
                    <td>@string.Join(" ", site.CreateTime)</td>
                    <td><a href="/Home/CheckRequest/@site.Id">Check</a></td>
                    <td><a href="/Home/DeleteRequest/@site.Id">Delete</a></td>
                </tr>
            </tbody>
        }
    }
</table>
<br />
Page @(ViewBag.PaggedList.PageCount < ViewBag.PaggedList.PageNumber ? 0 : ViewBag.PaggedList.PageNumber) of @ViewBag.PaggedList.PageCount

@Html.PagedListPager((IPagedList)ViewBag.PaggedList, page => Url.Action("AllRequests", new { page }))
