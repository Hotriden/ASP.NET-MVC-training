@model PagedList.IPagedList<CheckSiteMap.UI.Models.SiteViewModel>

@using PagedList.Mvc;

@{
    ViewBag.Title = "User Results";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All my requests</h2>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Url</th>
            <th scope="col">User Ip</th>
            <th scope="col">Summary Time, sec</th>
            <th scope="col">Check</th>
        </tr>
    </thead>
    @using (Html.BeginForm())
    {
        foreach (var site in Model)
        {
            <tbody>
                <tr>
                    <td>@string.Join(" ", site.Url)</td>
                    <td>@string.Join(" ", site.RequestIp)</td>
                    <td>@string.Join(" ", site.SummaryTime)</td>
                    <td><a href="/Home/CheckRequest/@site.Id">Check</a></td>
                </tr>
                <tr>
            </tbody>
        }
    }
</table>
<br />
Page @(Model.PageCount < Model.PageCount ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("UserResults", new { page }))
